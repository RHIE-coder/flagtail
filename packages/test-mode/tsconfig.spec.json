{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": true,                              /* Save .tsbuildinfo files to allow for incremental compilation of projects. */
    "composite": true,
    "module": "commonjs",
    "types": ["jest", "node"]
  },
  "exclude": [
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}